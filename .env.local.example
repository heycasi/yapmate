OPENAI_API_KEY=sk-your-openai-api-key-here

# App Review Mode (set to 'true' for App Store Review builds)
# When enabled, Trade plan is always shown as purchasable regardless of RevenueCat offering status
# This allows Apple reviewers to test the purchase flow even if Trade IAP is pending approval
NEXT_PUBLIC_APP_REVIEW_MODE=false

# Trade Tier Feature Flag
# Trade tier disabled for v1.0 App Store submission (ships with Free + Pro only)
# Set to 'true' to re-enable Trade tier (Â£25/month with CIS deduction)
# When re-enabling, also configure RevenueCat offering and App Store Connect
NEXT_PUBLIC_ENABLE_TRADE_TIER=false

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-database-password

# Stripe Configuration
